walltime = startsw()

proc progress() {local wt
  wt = startsw()
  if ($1 == 1) {
//    if (wt - walltime > 20) { // or a reasonable time for 1/dt steps
    if (wt - walltime > 0.00001) {
      if (pc.id == 0) {
         strdef msg
         sprint(msg, "1ms interval at t=%g was %g s", t, wt - walltime)
         biophys_log(msg)
      }
    }
  }
  walltime = wt
  cvode.event(t+1, "progress(1)")
}


